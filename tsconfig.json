{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["mocha", "node"],
    "paths": {
      "@typescript-eslint/rule-tester": [
        "node_modules/@typescript-eslint/rule-tester/dist/index.d.ts",
      ],
    },
  },
  "include": [
    "lib/**/*.ts",
    "tests/**/*.ts",
    "node_modules/@typescript-eslint/rule-tester/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
